{% extends "../layouts/navbarExternal.twig" %}

{% set pagetitle = 'Login' %}

{% block content %}

    <form method="post" action="/" name="login">
        <div class="jumbotron">
            <div class= "container">
                <br> <br>
                <table class="table table-hover">
                    <thead>
                    <tr>
                        <th colspan="2">OldFace Login</th>
                    </tr>
                    </thead>
                    <tbody>
                    <tr>
                        <td>Username</td>
                        <td><input class="form-control" type="text" name="username" value="" required/></td>
                    </tr>
                    <tr>
                        <td>Passwort</td>
                        <td><input class="form-control" type="password" name="password" value="" required/></td>
                    </tr>
                    <tr>
                        <td><input type="submit" value="Login" class="btn btn-default" /></td>
                    </tr>
                    </tbody>
                </table>
            </div>
        </div>
    </form>

{% endblock %}