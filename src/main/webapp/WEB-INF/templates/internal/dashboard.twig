{% extends "../layouts/navbarInternal.twig" %}

{% set pagetitle = 'Dashboard' %}

{% block content %}

    <div class="container-fluid jumbotron">
        <div class="container text-center">
            <h2>
                {{ name }} - Dashboard
            </h2>

            <hr>
            <div class="container">
                {% for post in posts %}
                    <div class="panel panel-default">
                        <div class="panel-heading">
                            <h4> <span class="blue-text "> {{post.author}} </span> | {{post.creationDate.getTime()|date("dd-MM-yyyy")}} </h4>
                        </div>
                        <div class="panel-body">
                           <h3> {{post.content}} </h3>

                           <b class="small">  Likes :  {{ post.likers }}</b>


                        </div>
                        <div class="panel-footer">
                            <hr>
                            Kommentare:
                            <br>
                            <br>
                            <ul class="list-group">
                                {% for comment in post.comments %}
                                    <li class="list-group-item">
                                        {{comment.content}} von <span class="blue-text"> {{comment.author}} </span>

                                       <b class="small">  Likes :  {{ comment.likers }}</b>


                                    </li>
                                {% endfor%}
                            </ul>
                        </div>
                    </div>
                {% endfor%}

            </div>

        </div>


        <br><br>

    </div>


    </div>
{% endblock %}