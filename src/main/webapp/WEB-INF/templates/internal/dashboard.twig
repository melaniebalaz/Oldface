{% extends "../layouts/navbarInternal.twig" %}

{% set pagetitle = 'Dashboard' %}

{% block content %}

<div class="container-fluid jumbotron">
	<div class="container text-center">
		<h2>
			{{ name }} - Dashboard
		</h2>

        <hr>
        <div class="col-md-6">
            {% for post in posts %}
                <div class="panel panel-default">
                    <div class="panel-heading">{{post.creationDate.format("MM-dd-YYYY")}}</div>
                    <div class="panel-body">
                        {{post.content}}
                    </div>
                </div>
            {% endfor%}
        </div>

		</div>


		<br><br>

	</div>
	
		
</div>
{% endblock %}